<%- include('partials/header') -%>
<%- include('partials/navbar') -%>
<div class="container-fluid">
    <div class="card mx-auto my-3 w-50">
        <div class="card-header">
            <h3 class="text-center">Signup</h3>
        </div>
        <div class="card-body text-center ">
            <form id="signup-form" class="m-3">
                <input type="text" name="username" class="my-3 form-control" placeholder="Username">
                <input type="email" name="email" class="my-3 form-control" placeholder="Email">
                <input type="password" name="password" class="my-3 form-control" placeholder="Password">
                <input type="password" name="password-confirmation" class="my-3 form-control" placeholder="Password confirmation">
                <button type="submit" class="btn btn-dark" id="signup-form-submit">
                    Create account
                </button>
            </form>
        </div>
    </div>
</div>
<script type="application/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.17/validator.min.js"></script>
<script type="application/javascript" src="/static/signup.js"></script>
<%- include('partials/footer') -%>